<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_background"
    android:orientation="vertical"
    android:padding="10dp"
    android:weightSum="10"
    tools:context=".saved_locations">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_text"
        android:textSize="20sp"
        android:id="@+id/search_result_label"
        android:visibility="gone"
        android:layout_marginVertical="5dp"
        android:text="Search Result"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/saved_location_summary"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="15dp"
        android:layout_weight="3"
        app:cardCornerRadius="10dp"
        android:background="@color/grey_components"
        android:textColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_gravity="bottom"
            android:background="@color/grey_components"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/grey_components"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/home_card1_icon"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:contentDescription="weather_icon" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/home_card1_temp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="30sp"/>

                    <TextView
                        android:id="@+id/home_card1_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey_text"
                        android:textSize="18sp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/home_card1_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:tint="@color/grey_text"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="bottom|right"
            android:src="@drawable/information_outline"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/saved_location_params"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="15dp"
        android:background="@color/grey_components"
        android:textColor="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey_components"
            android:textColor="@color/white"
            android:gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:textColor="@color/white"
                android:layout_margin="5dp"
                android:gravity="center_vertical"
                android:background="@color/grey_components"
                android:id="@+id/saved_humidity">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:tint="@color/colorAccent"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/water_percent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:id="@+id/home_card2_humidity"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey_text"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:text="Humidity"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/grey_components"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:id="@+id/saved_wind_speed">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:tint="@color/colorAccent"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/weather_windy"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:id="@+id/home_card2_windspeed"
                    android:layout_gravity="center"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey_text"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    android:textAlignment="center"
                    android:text="Wind Speed"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/grey_components"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:id="@+id/saved_visibility">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:tint="@color/colorAccent"
                    android:layout_gravity="center"
                    android:src="@drawable/eye"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:id="@+id/home_card2_visibility"
                    android:layout_gravity="center"
                    android:textAlignment="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey_text"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:text="Visibility"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/grey_components"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:id="@+id/saved_pressure">
                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:tint="@color/colorAccent"
                    android:layout_gravity="center"
                    android:src="@drawable/gauge"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:id="@+id/home_card2_pressure" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grey_text"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:text="Pressure"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/saved_location_weekly"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        app:cardCornerRadius="10dp"
        android:layout_marginBottom="20dp"
        android:background="@color/grey_components"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/saved_location_params"
        tools:layout_editor_absoluteX="16dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey_components">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey_components"
                android:id="@+id/weekly_card_data"
                android:textColor="@color/white">

            </androidx.recyclerview.widget.RecyclerView>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</LinearLayout>